<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/background"
    tools:showIn="@layout/app_bar_home">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/white">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                />
            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_24sdp"
                android:orientation="horizontal"
                android:gravity="center">
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <GridLayout
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/intro_org"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_row="0"
                    android:layout_column="0"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dvsr0btt"
                        android:gravity="center"
                        android:text="@string/intro_card"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/terms"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="18sp"
                    android:layout_row="0"
                    android:layout_column="1"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/orange">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/termandcondition"
                        android:fontFamily="@font/dvsr0btt"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/plant_request"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_row="1"
                    android:layout_column="0"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/green">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plantaioninfo"
                        android:fontFamily="@font/dvsr0btt"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/upload"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_row="1"
                    android:layout_column="1"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/light_blue1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dvsr0btt"
                        android:text="@string/plantphotoupload"
                        android:textSize="20sp"
                        android:textColor="@color/white"

                        android:gravity="center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/sponsor"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/light_blue">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sponsor"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/dvsr0btt"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>